{% extends 'base.html.twig' %}

{% block title %}Sanction index{% endblock %}

{% block body %}
    <h1>Sanction index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>SanctionDate</th>
                <th>Reason</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sanction in sanctions %}
            <tr>
                <td>{{ sanction.id }}</td>
                <td>{{ sanction.sanctionDate ? sanction.sanctionDate|date('Y-m-d') : '' }}</td>
                <td>{{ sanction.reason }}</td>
                <td>
                    <a href="{{ path('app_sanction_show', {'id': sanction.id}) }}">show</a>
                    <a href="{{ path('app_sanction_edit', {'id': sanction.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sanction_new') }}">Create new</a>
{% endblock %}
