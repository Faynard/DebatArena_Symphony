{% extends 'base.html.twig' %}

{% block title %}{{ debate.nameDebate }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/argument/argument_new.css') }}">
{% endblock %}

{% block body %}

    <div class="container">
        {% if mainArgument == null %}
            <h1 class="title">{{ 'argument.new.create'|trans }} {{ debate.nameDebate }}</h1>
        {% else %}
            <h1 class="title">{{ 'argument.new.response'|trans }} {{ debate.nameDebate }}</h1>
        {% endif %}


        {{ form_start(form) }}

        {{ form_row(form.camp) }}
        {{ form_row(form.text) }}

        <div class="button-group justify-content-center">
            <a href="{{ path('app_debate_show', {'id': debate.id}) }}" class="button">
                {{ 'argument.new.return' }}
            </a>
            <button class="button button-main">{{ 'argument.new.save'|trans }}</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
