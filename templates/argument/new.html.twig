{% extends 'base.html.twig' %}

{% block title %}{{ debate.nameDebate }}{% endblock %}

{% block body %}

    {% if mainArgument == null %}
        <h1>{{ 'argument.new.create'|trans }} {{ debate.nameDebate }}</h1>
    {% else %}
        <h1>{{ 'argument.new.response'|trans }} {{ debate.nameDebate }}</h1>
    {% endif %}


    {{ form_start(form) }}

    {{ form_row(form.text) }}
    {{ form_row(form.camp) }}

    <a href="{{ path('app_debate_show', {'id': debate.id}) }}" class="btn">
        {{ 'argument.new.return' }}
    </a>
    <button class="btn">{{ 'argument.new.save'|trans }}</button>
    {{ form_end(form) }}
{% endblock %}
