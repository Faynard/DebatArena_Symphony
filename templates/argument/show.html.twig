{% extends 'base.html.twig' %}

{% block title %}Argument{% endblock %}

{% block body %}
    <h1>Argument</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ argument.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ argument.text }}</td>
            </tr>
            <tr>
                <th>ValidationDate</th>
                <td>{{ argument.validationDate ? argument.validationDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_argument_index') }}">back to list</a>

    <a href="{{ path('app_argument_edit', {'id': argument.id}) }}">edit</a>

    {{ include('argument/_delete_form.html.twig') }}
{% endblock %}
