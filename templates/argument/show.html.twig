<div class="card">
    <p>{{ argument.text }}</p>
    <form method="post" action="{{ path('app_argument_vote') }}">
        <input type="hidden" name="argumentId" value="{{ argument.id }}">
        <button class="btn">
            <img src="{{ asset('image/vote.png') }}">
        </button>
    </form>
    <button class="btn">{{ 'argument.respond'|trans }}</button>
    <button class="btn">{{ 'argument.report'|trans }}</button>
</div>
