{% extends 'base.html.twig' %}

{% block title %}Créer un débat{% endblock %}

{% block body %}
    <link href="https://cdn.jsdelivr.net/npm/tom-select@2.2.2/dist/css/tom-select.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/tom-select@2.2.2/dist/js/tom-select.complete.min.js"></script>

    <style>
        :root {
            --primary-color: #3d3548;
            --secondary-color: #ffffff;
            --accent-color: #8c91e3;
            --accent-hover: #7073c0;
            --text-color: #333;
            --bg-light: #f9f9f9;
            --border-radius: 12px;
            --input-padding: 12px 15px;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: var(--bg-light);
            margin: 0;
            padding: 0;
        }

        .content {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding: 40px 20px;
            min-height: 100vh;
        }

        .debate-form {
            background-color: var(--secondary-color);
            border-radius: var(--border-radius);
            padding: 35px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
            width: 100%;
            max-width: 650px;
            display: flex;
            flex-direction: column;
            gap: 24px;
        }

        .debate-form h1 {
            font-size: 1.8rem;
            margin-bottom: 10px;
            color: var(--primary-color);
        }

        .debate-form label {
            font-weight: 600;
            margin-bottom: 6px;
            display: inline-block;
            color: var(--primary-color);
        }

        .debate-form input,
        .debate-form textarea,
        .debate-form select {
            width: 100%;
            padding: var(--input-padding);
            border: 1px solid #ccc;
            border-radius: var(--border-radius);
            font-size: 1rem;
            background-color: white;
            transition: border 0.2s;
        }

        .debate-form input:focus,
        .debate-form textarea:focus,
        .debate-form select:focus {
            border-color: var(--accent-color);
            outline: none;
        }

        .debate-form textarea {
            resize: vertical;
            min-height: 120px;
        }

        .debate-form button {
            background-color: var(--accent-color);
            color: white;
            padding: 14px;
            border: none;
            border-radius: var(--border-radius);
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .debate-form button:hover {
            background-color: var(--accent-hover);
        }

        .alert-success {
            padding: 10px 16px;
            background-color: #e0f7e9;
            border: 1px solid #a3d9b1;
            border-radius: var(--border-radius);
            color: #2d8a53;
            font-weight: 500;
        }
    </style>


    <div class="content">
        <form method="post" class="debate-form">
            <h1>Créer un débat</h1>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            {{ form_start(form, {'attr': {'class': 'debate-form'}}) }}

            {{ form_row(form.nameDebate, {'label': 'Nom du débat'}) }}
            {{ form_row(form.descriptionDebate, {'label': 'Description du débat'}) }}
            {{ form_row(form.camp1, {'label': 'Nom du premier camp'}) }}
            {{ form_row(form.camp2, {'label': 'Nom du second camp'}) }}
            {{ form_row(form.categories, {'attr': {'class': 'tom-select'}}) }}

            <button type="submit">Créer le débat</button>

            {{ form_end(form) }}
        </form>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            new TomSelect('.tom-select', {
                plugins: ['remove_button'],
                persist: false,
                create: false,
                maxItems: null,
                placeholder: "Sélectionnez une ou plusieurs catégories"
            });
        });
    </script>
{% endblock %}
